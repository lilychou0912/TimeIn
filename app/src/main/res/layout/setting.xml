<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/self_bg">

   <include layout="@layout/title_setting"
        android:id="@+id/title_setting"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/title_setting"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/img_1" />

    <TextView
        android:id="@+id/name"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_below="@id/title_setting"
        android:layout_toRightOf="@id/image_view"
        android:layout_toEndOf="@id/image_view"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:text="昵称:"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/in_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_setting"
        android:layout_toRightOf="@id/name"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:hint="Typing name"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/sign"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/image_view"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="签名:"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/sign"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:hint="Signing here"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/image_view"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:gravity="left"
        android:text="设置"
        android:textColor="#000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/friends"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/setting"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:gravity="left"
        android:text="好友"
        android:textColor="#000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/ranking_list"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/friends"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:gravity="left"
        android:text="好友排行"
        android:textColor="#000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/ranking_list"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:gravity="left"
        android:text="关于我们"
        android:textColor="#000"
        android:textSize="24sp" />

</RelativeLayout>